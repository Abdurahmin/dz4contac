<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/student_recycler"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <Button
        android:id="@+id/btn_anotoliy"
        android:text="данные Анотолий"
        android:layout_marginBottom="60dp"
        app:layout_constraintBottom_toBottomOf="@id/btn_boris"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:text="данные Бориса"
        android:id="@+id/btn_boris"
        android:layout_marginBottom="60dp"
        app:layout_constraintBottom_toBottomOf="@id/btn_ivun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:text="данные Ивана"
        android:id="@+id/btn_ivun"
        android:layout_marginBottom="60dp"
        app:layout_constraintBottom_toBottomOf="@id/btn_sergey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btn_sergey"
        android:text="данные сергея"
        android:layout_marginBottom="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>